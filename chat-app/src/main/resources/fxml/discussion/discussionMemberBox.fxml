<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="root" alignment="CENTER_LEFT" prefHeight="30" prefWidth="250" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <Label fx:id="errorMessage" managed="false" visible="false" style="-fx-text-fill: RED" />
   <HBox style="-fx-background-color: #2B2B2B; -fx-background-radius: 5;" VBox.vgrow="ALWAYS">
      <padding>
         <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
      </padding>
      <ImageView fx:id="pictureProfile" fitHeight="22.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true">
         <HBox.margin>
            <Insets left="6.0" />
         </HBox.margin>
         <Image url="@../../static/avatar.png" />
      </ImageView>
      <Label fx:id="labelUsername" textFill="WHITE">
         <font>
            <Font size="13.0" />
         </font>
         <HBox.margin>
            <Insets left="10.0" right="10.0" />
         </HBox.margin>
      </Label>
      <Pane HBox.hgrow="ALWAYS" />
      <Button fx:id="linkToDiscussionBtn" managed="false" mnemonicParsing="false" style="-fx-background-color: transparent; -fx-padding: 2" visible="false">
         <graphic>
            <ImageView fitHeight="18" fitWidth="18" pickOnBounds="true" preserveRatio="true">
               <Image url="@../../static/send_message.png" />
            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="deleteButton" managed="false" mnemonicParsing="false" style="-fx-background-color: transparent; -fx-padding: 2" visible="false">
         <graphic>
            <ImageView fitHeight="18" fitWidth="18" pickOnBounds="true" preserveRatio="true">
               <Image url="@../../static/x.png" />
            </ImageView>
         </graphic>
      </Button>
   </HBox>
</VBox>
