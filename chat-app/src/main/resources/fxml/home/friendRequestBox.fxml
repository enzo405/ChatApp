<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER_RIGHT" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <Label fx:id="errorMessageLabel" alignment="CENTER" contentDisplay="RIGHT" managed="false" style="-fx-text-fill: RED" textAlignment="RIGHT" visible="false" />
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Pane HBox.hgrow="NEVER" />
        <ImageView fx:id="profilePictureFriend" fitHeight="40" fitWidth="40" pickOnBounds="true" preserveRatio="true" />
        <Label fx:id="nameLabel" style="-fx-font-size: 16;" textFill="WHITE" />
        <Pane HBox.hgrow="ALWAYS" />
        <Button fx:id="acceptButton" style="-fx-background-color: #B6F09C; -fx-font-size: 16;" text="Accepter" textFill="BLACK" />
        <Button fx:id="declineButton" style="-fx-background-color: #630505; -fx-font-size: 16;" text="Refuser" textFill="WHITE" />
    </HBox>
</VBox>
