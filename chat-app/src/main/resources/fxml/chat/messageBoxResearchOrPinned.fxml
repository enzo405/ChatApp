<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox fx:id="root" alignment="CENTER" fillHeight="false" spacing="4.0" style="-fx-background-radius: 5" styleClass="messageBox" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <stylesheets>
      <URL value="@../../static/css/message.css" />
   </stylesheets>
   <padding>
      <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
   </padding>
   <VBox fillWidth="false">
      <ImageView fx:id="profilePicture" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="ALWAYS">
         <Image url="@../../static/avatar.png" />
      </ImageView>
   </VBox>
   <VBox fillWidth="false" HBox.hgrow="ALWAYS">
      <HBox alignment="CENTER_LEFT" spacing="15.0" VBox.vgrow="ALWAYS">
         <Label fx:id="usernameLabel" textFill="#787878">
            <font>
               <Font size="15.0" />
            </font>
         </Label>
         <Label fx:id="dateTimeLabel" textFill="#787878">
            <font>
               <Font size="12.0" />
            </font>
         </Label>
      </HBox>
      <VBox fx:id="containerMessageAndMessageAnsweredVBox" style="-fx-background-color: #181a20; -fx-opacity: 67%; -fx-background-radius: 20;" VBox.vgrow="ALWAYS">
         <padding>
            <Insets bottom="3.0" left="10.0" right="10.0" top="3.0" />
         </padding>
         <Label fx:id="mainMessageContent" textAlignment="JUSTIFY" wrapText="true" />
      </VBox>
   </VBox>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</HBox>
