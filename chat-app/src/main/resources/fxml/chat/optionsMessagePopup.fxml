<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<HBox fx:id="root" alignment="CENTER" visible="false" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1" spacing="4">
    <Label fx:id="errorMessage" visible="false" managed="false" style="-fx-text-fill: RED"/>
    <HBox style="-fx-background-color: #323338; -fx-background-radius: 10; -fx-padding: 2">
        <Button fx:id="copyMessageButton" mnemonicParsing="false" onAction="#copyMessage"
                style="-fx-background-color: none;" textFill="WHITE">
            <graphic>
                <ImageView fitHeight="14.0" fitWidth="14.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../../static/copy_button.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="deleteMessageButton" mnemonicParsing="false" onAction="#deleteMessage"
                style="-fx-background-color: none;" textFill="RED" visible="false" managed="false">
            <graphic>
                <ImageView fitHeight="17.0" fitWidth="17.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../../static/trash_button.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="pinMessageButton" mnemonicParsing="false" onAction="#pinMessage"
                style="-fx-background-color: none;"
                textFill="WHITE">
            <graphic>
                <ImageView fx:id="pinMesageButtonImageView" fitHeight="15.0" fitWidth="15.0" pickOnBounds="true"
                           preserveRatio="true">
                    <viewport>
                        <Rectangle2D/>
                    </viewport>
                    <Image url="@../../static/pinMessage.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="copyLinkButton" mnemonicParsing="false" onAction="#copyLink" style="-fx-background-color: none;"
                textFill="WHITE">
            <graphic>
                <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../../static/link_button.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#closePopup" style="-fx-background-color: none;"
                textFill="WHITE">
            <graphic>
                <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../../static/x.png"/>
                </ImageView>
            </graphic>
        </Button>
    </HBox>
</HBox>
